<div class="container mt-5">
  <div class="col-md-8 mx-auto">
    <div class="mt-4">
      <h4 class="text-center mb-3">レビュー編集</h4>
      <%= form_with(model: @review, url: user_event_review_path(current_user, @event), local: true, scope: :review) do |f| %>
        <div class="mb-3">
          <%= f.label :rating, "評価 (1〜5)", class: "form-label" %>
          <div class="star-rating">
            <% 5.downto(1) do |i| %>
              <%= f.radio_button :rating, i, id: "star#{i}" %>
              <label for="star<%= i %>" class="star">
                ★
              </label>
            <% end %>
          </div>
        </div>
        <div class="mb-3">
          <%= f.label :body, "コメント", class: "form-label" %>
          <%= f.text_area :body, rows: 3, class: "form-control" %>
        </div>
        <div class="d-flex justify-content-end">
          <%= f.submit "更新", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
