<%= form_with(model: @review, url: user_event_review_path(current_user, @event), scope: :review, local: true) do |f| %>

  <div class="mb-3">
    <%= f.label :rating, "評価 (1〜5)", class: "form-label" %>
    <div class="star-rating">
      <% 5.downto(1) do |i| %>
        <%= f.radio_button :rating, i, id: "star#{i}" %>
        <label for="star<%= i %>" class="star">
          ★
        </label>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :body, "コメント", class: "form-label" %>
    <%= f.text_area :body, class: "form-control" %>
  </div>

  <div class="d-flex justify-content-end">
    <%= f.submit "投稿", class: "btn btn-primary" %>
  </div>
<% end %>
